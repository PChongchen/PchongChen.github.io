	author = {Chen, Pengchong and Luo, Ying and Zheng, WeiJia and Gao, Zhiqiang and Chen, YangQuan},
	month = aug,
	year = {2021},
	pages = {359--369},
	file = {2021_Chen et al_Fractional order active disturbance rejection control with the idea of cascaded.pdf:E\:\\zoterofile1\\file\\我的论文\\2021_Chen et al_Fractional order active disturbance rejection control with the idea of cascaded.pdf:application/pdf},
}

