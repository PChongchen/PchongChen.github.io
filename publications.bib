	journal = {IEEE/ASME Transactions on Mechatronics},
	author = {Chen, Pengchong and Luo, Ying},
	year = {2022},
	note = {Conference Name: IEEE/ASME Transactions on Mechatronics},
	pages = {137--148},
	file = {2022_Chen et al_A Two-Degree-of-Freedom Controller Design Satisfying Separation Principle With.pdf:E\:\\zoterofile1\\file\\我的论文\\2022_Chen et al_A Two-Degree-of-Freedom Controller Design Satisfying Separation Principle With.pdf:application/pdf;IEEE Xplore Abstract Record:C\:\\Users\\Administrator\\Zotero\\storage\\T4HRGCT9\\9354040.html:text/html},
